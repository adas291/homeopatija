@model homeopatija.Entities.Disease

@{
    ViewData["Title"] = "Details";
}

<h1>Detaliau</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Causes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Causes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Treatment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Treatment)
        </dd>
        <dt class="col-sm-2">
            Visada pasireiškiantys simptomai:
        </dt>
        <dd class="col-sm-10">
            @foreach (var symptom in ViewBag.MandatorySymptoms)
            {
                <span>@symptom.Title</span>

                <br />
            }
        </dd>
        <!-- Optional Symptoms -->
        <dt class="col-sm-2">
            Kartais pasireiškia kartu:
        </dt>
        <dd class="col-sm-10">
            @foreach (var symptom in ViewBag.OptionalSymptoms)
            {
                <span>@symptom.Title</span>

                <br />
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Redaguoti ligą", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Grįžti atgal</a>
</div>
