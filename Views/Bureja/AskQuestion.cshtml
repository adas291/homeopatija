@model homeopatija.Entities.Question

@{
    ViewData["Title"] = "AskQuestion";
}

<style>
    body{
        text-align: center;
    }

    .tarot_image {
        height: 50vh;
    }

    .col-md-4{
        width: 100%;
    }
</style>
<h1>@Model.question</h1>
<h3>Jūsų atsakymas:</h3>
<div class="row">
    <div class="col-md-4">
        <img class="tarot_image" src="@Html.Raw(Model.answer)" alt="Taro korta">
    </div>
</div>

<hr />
<div>
    <a asp-action="Index">Grįžti</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
