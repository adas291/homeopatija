@model List<homeopatija.Entities.Drug>

@{
  ViewData["Title"] = "Table";
}

<h1>Vaistų lentelė</h1>

<p>
  <a asp-action="Create">Įrašyti vaistą</a> |
  <a asp-action="Compatability">Peržiūrėti suderinamumo matricą</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Pavadinimas</th>
      <th>Kaina</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
          @Html.ActionLink("Redaguoti", "Edit", new { id=item.Id }) |
          @Html.ActionLink("Daugiau informacijos", "Details", new { id=item.Id }) |
          @Html.ActionLink("Ištrinti", "Delete", new { id=item.Id })
        </td>
      </tr>
    }
  </tbody>
</table>
